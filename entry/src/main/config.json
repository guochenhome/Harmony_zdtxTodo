{
  "app": {
    "bundleName": "com.zdtx.harmonyos.zdtxtodo",
    "vendor": "zdtx",
    "version": {
      "code": 1,
      "name": "1.0"
    },
    "apiVersion": {
      "compatible": 4,
      "target": 4,
      "releaseType": "Beta2"
    }
  },
  "deviceConfig": {},
  "module": {
    "package": "com.zdtx.harmonyos.zdtxtodo",
    "name": ".MyApplication",
    "deviceType": [
      "phone"
    ],
    "distro": {
      "deliveryWithInstall": true,
      "moduleName": "entry",
      "moduleType": "entry"
    },
    "abilities": [
      {
        "skills": [
          {
            "entities": [
              "entity.system.home"
            ],
            "actions": [
              "action.system.home",
              "action.main.info"
            ]
          }
        ],
        "orientation": "unspecified",
        "name": "com.zdtx.harmonyos.zdtxtodo.MainAbility",
        "icon": "$media:icon",
        "description": "$string:mainability_description",
        "label": "$string:app_name",
        "type": "page",
        "launchType": "standard"
      }
    ],
    "reqPermissions": [
      {
        "name": "ohos.permission.INTERNET",
        "reason": "需要访问网络的权限",
        "usedScene": {
          "ability": [
            "com.zdtx.harmonyos.zdtxtodo.MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "name": "ohos.permission.CAMERA",
        "reason": "需要访问相机的权限",
        "usedScene": {
          "ability": [
            "com.zdtx.harmonyos.zdtxtodo.MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "name": "ohos.permission.READ_USER_STORAGE",
        "reason": "需要读写文件的权限",
        "usedScene": {
          "ability": [
            "com.zdtx.harmonyos.zdtxtodo.MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "name": "ohos.permission.WRITE_USER_STORAGE",
        "reason": "需要读写文件的权限",
        "usedScene": {
          "ability": [
            "com.zdtx.harmonyos.zdtxtodo.MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "name": "ohos.permission.INTERNET",
        "reason": "允许程序打开网络套接字，进行网络连接",
        "usedScene": {
          "ability": [
            "com.zdtx.harmonyos.zdtxtodo.MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "name": "ohos.permission.GET_NETWORK_INFO",
        "reason": "获取网络连接信息",
        "usedScene": {
          "ability": [
            "com.zdtx.harmonyos.zdtxtodo.MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "name": "hos.permission.SET_NETWORK_INFO",
        "reason": "修改网络连接状态",
        "usedScene": {
          "ability": [
            "com.zdtx.harmonyos.zdtxtodo.MainAbility"
          ],
          "when": "always"
        }
      }
    ],
    "metaData": {
      "customizeData": [
        {
          "name": "hwc-theme",
          "value": "androidhwext:style/Theme.Emui.NoTitleBar",
          "extra": ""
        }
      ]
    }
  }
}